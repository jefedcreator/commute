{
  "name": "commute",
  "version": "1.0.0",
  "description": "Commute Api",
  "main": "index.js",
  "type": "module",
  "scripts": {
    "dev": "nodemon --config nodemon.json",
    "start": "yarn run build-secrets && node -r module-alias/register ./dist",
    "build": "rm -rf ./dist && tsc --build tsconfig.prod.json",
    "format": "prettier --write \"src/**/*.ts\"",
    "build-secrets": "node -r module-alias/register ./dist/config/build.env.js",
    "start:dev": "yarn run build && node -r module-alias/register ./dist",
    "test": "tsx --test src/test/**.ts"
  },
  "repository": "https://github.com/",
  "author": "Dandys",
  "license": "MIT",
  "private": true,
  "_moduleAliases": {
    "@controllers": "dist/controllers",
    "@middlewares": "dist/middlewares",
    "@validators": "dist/validators",
    "@services": "dist/services",
    "@models": "dist/models",
    "@utils": "dist/utils",
    "@config": "dist/config",
    "@types": "dist/types"
  },
  "dependencies": {
    "bcrypt": "^5.1.1",
    "compression": "^1.7.4",
    "cors": "^2.8.5",
    "cross-env": "^7.0.3",
    "envalid": "^8.0.0",
    "express": "^4.18.2",
    "form-data": "^4.0.0",
    "gitops-secrets": "^0.0.6",
    "helmet": "^7.0.0",
    "joi": "^17.11.0",
    "jsonwebtoken": "^9.0.2",
    "mailgun.js": "^9.3.0",
    "module-alias": "^2.2.3",
    "mongoose": "^7.6.2",
    "multer": "^1.4.5-lts.1",
    "node-fetch": "2",
    "nodemailer": "^6.9.6",
    "otplib": "^12.0.0-3",
    "tsx": "^4.7.2",
    "typescript": "^5.3.3",
    "winston": "^3.11.0"
  },
  "devDependencies": {
    "@types/bcrypt": "^5.0.0",
    "@types/chai": "^4.3.14",
    "@types/cors": "^2.8.14",
    "@types/express": "^4.17.19",
    "@types/jsonwebtoken": "^9.0.3",
    "@types/multer": "^1.4.9",
    "@types/node": "^20.8.6",
    "@types/node-fetch": "^2.6.7",
    "@types/nodemailer": "^6.4.13",
    "@types/supertest": "^6.0.2",
    "chai": "^5.1.0",
    "dotenv": "^16.3.1",
    "esbuild": "^0.19.4",
    "esbuild-runner": "^2.2.2",
    "nodemon": "^3.0.1",
    "prettier": "^3.0.3",
    "supertest": "^6.3.4",
    "tsconfig-paths": "^4.2.0"
  }
}
